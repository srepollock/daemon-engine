{
  "name": "sunset-engine",
  "version": "0.0.1",
  "description": "The Sunset Engine is a Typescript game engine. Built on latest technologies, it allows users to develop and deploy lightweight games in a modern development standard environment. The engine is focused to be modular and lightweight, all while allowing developers to quickly build projects and applications and reuse previous assets swiftly.",
  "main": "./lib/sunset.umd.js",
  "module": "./lib/sunset.es.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build/* dist/* lib/*",
    "commit": "npm run lint; git add --all && git-cz",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "typedoc --excludeExternals --externalPattern \"node_modules/**\" --ignoreCompilerErrors --name Sunset\\ Engine\\ API --out docs --mode file --module commonjs --target ESNext --readme none src/*",
    "lint": "tslint src/**/*.ts -c tslint.json",
    "prepare": "npm run clean; npm run build;",
    "pretest": "npm run build",
    "semantic-release": "semantic-release",
    "setup:all": "npm run setup:semantic-release; npm run setup:commitizen; npm run setup:update-package-json",
    "setup:update-package-json": "sed -i '3s/.*/\"version\": 0.0.0-semantically-released,/' package.json",
    "setup:commitizen": "commitizen init cz-conventional-changelog --save-dev --save-exact",
    "setup:semantic-release": "semantic-release-cli setup",
    "test": "npm run test:all",
    "test:all": "nyc mocha --opts mocha.opts \"test/**/*.spec.{ts,tsx}\" --exit",
    "test:browser": "mocha --opts mocha.opts \"test/browser/*.spec.ts\" --exit",
    "test:functional": "mocha --opts mocha.opts \"test/functional/**/*.spec.ts\"",
    "test:integration": "mocha --opts mocha.opts \"test/integration/**/*.spec.ts\"",
    "test:unit": "mocha --opts mocha.opts \"test/unit/**/*.spec.ts\"",
    "watch": "mocha -w t--opts .mocha est/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srepollock/sunset-engine.git"
  },
  "keywords": [
    "typescript",
    "game-engine",
    "game-development",
    "game-framework"
  ],
  "author": "Spencer Pollock <spencer@spollock.ca> (http://spollock.ca)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/srepollock/sunset-engine/issues"
  },
  "homepage": "http://spollock.ca/sunset-engine",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/puppeteer": "^1.11.1",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^2.0.16",
    "event-stream": "3.3.4",
    "mocha": "^5.2.0",
    "node": "^10.14.2",
    "nyc": "^12.0.2",
    "puppeteer": "^1.11.0",
    "semver": ">=4.3.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typedoc": "^0.11.1"
  },
  "dependencies": {
    "typescript": "^3.3.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "test/helperfiles",
      "**/*.d.ts",
      "**/*.spec.ts",
      "dist",
      "docs",
      "coverage",
      "lib"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
