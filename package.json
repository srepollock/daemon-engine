{
  "name": "divine-engine",
  "version": "0.3.3",
  "description": "The Divine Engine is a Typescript game engine. Built on latest technologies, it allows users to develop and deploy lightweight games in a modern development standard environment. The engine is focused to be modular and lightweight, all while allowing developers to quickly build projects and applications and reuse previous assets swiftly.",
  "main": "./lib/divine.umd.js",
  "module": "./lib/divine.es.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build-tests": "tsc --p test/helperfiles",
    "bundle": "tsc; rollup -c",
    "build": "tsc",
    "clean": "rm -rf build/* dist/* lib/*",
    "cleanbuild": "npm run clean; npm run build",
    "commit": "npm run lint; git add --all && git-cz",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "typedoc --excludeExternals --externalPattern \"node_modules/**\" --ignoreCompilerErrors --name Divine\\ Engine\\ API --out docs --mode file --target ESNext --readme none src/*",
    "env": "env",
    "lint": "tslint src/**/*.ts -c tslint.json",
    "prepare": "npm run clean; npm run bundle;",
    "semantic-release": "semantic-release",
    "test": "npm run test:all",
    "test:all": "jest --coverage",
    "test:debug": "mocha --opts mocha.opts \"test/**/*.spec.{ts,tsx}\" --exit --inspect-brk",
    "test:functional": "mocha --opts mocha.opts \"test/functional/**/*.spec.{ts,tsx}\" --exit",
    "test:integration": "mocha --opts mocha.opts \"test/integration/**/*.spec.{ts,tsx}\" --exit",
    "test:unit": "mocha --opts mocha.opts \"test/unit/**/*.spec.{ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srepollock/divine-engine.git"
  },
  "keywords": [
    "typescript",
    "game-engine",
    "game-development"
  ],
  "author": "Spencer Pollock <spencer@spollock.ca> (http://spollock.ca)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/srepollock/divine-engine/issues"
  },
  "homepage": "http://spollock.ca/divine-engine",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@joseph184/rollup-plugin-node-builtins": "^2.1.4",
    "@types/jest": "^24.0.15",
    "@types/node": "^10.12.0",
    "codecov": "^3.1.0",
    "electron": "^2.0.11",
    "jest": "^24.8.0",
    "jest-codemods": "^0.20.0",
    "rollup": "^0.68.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.21.2",
    "semver": ">=4.3.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.14.2"
  },
  "dependencies": {
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "node": "^11.12.0",
    "semver": ">=4.3.2",
    "three": "^0.106.2",
    "typescript": "^3.4.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": ["lcov", "text"],
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "src/core/loggingsystem/test/.*(test|spec)\\.[jt]sx?$",
      "src/core/messagesystem/test/.*(test|spec)\\.[jt]sx?$"
    ]
  }
}
