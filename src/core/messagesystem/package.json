  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/srepollock/de-message-system/issues"
  },
  "homepage": "https://github.com/srepollock/de-message-system#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.0",
    "codecov": "^3.3.0",
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "handlebars": "^4.1.2",
    "js-yaml": "^3.13.1",
    "marked": "^0.6.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typedoc": "^0.14.2"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "node": "^11.12.0",
    "nyc": "^14.1.1",
    "typescript": "^3.4.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
